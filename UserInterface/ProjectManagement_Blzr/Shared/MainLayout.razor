@inherits LayoutComponentBase

<PageTitle>©GV</PageTitle>

<div class="container-fluid p-0">
    <div class="control-container">
        <SfAppBar ColorMode="AppBarColor.Primary">
            <a href="https://www.syncfusion.com/blazor-components" target="_blank" rel="noopener" role="link" aria-label="Syncfusion blazor components">
                <div class="syncfusion-logo"></div>
            </a>
            <AppBarSeparator></AppBarSeparator>      
            <SfButton CssClass="e-inherit" IconCss="e-icons e-home"></SfButton>
            <AppBarSeparator></AppBarSeparator>
            <SfMenu TValue="MenuItem" CssClass="e-inherit">
                <MenuItems>
                    <MenuItem Text="Project">
                        <MenuItems>
                            <MenuItem Text="Gantt View" Url="projectgantt"></MenuItem>
                            <MenuItem Text="Project Kanbans" Url="projectkanbans"></MenuItem>
                        </MenuItems>
                    </MenuItem>
                    <MenuItem Text="Kanban">
                        <MenuItems>
                        <MenuItem Text="Kanban Cards" Url="userkanbans"></MenuItem>
                        <MenuItem Text="Kanban Calendar" Url="userkanbans"></MenuItem>
                        </MenuItems>
                    </MenuItem>                    
                </MenuItems>
            </SfMenu>
            <AppBarSpacer></AppBarSpacer>
            <SfButton CssClass="e-inherit" IconCss="e-icons e-comment-show"></SfButton>
            <SfButton CssClass="e-inherit" IconCss="e-icons e-user"></SfButton>
        </SfAppBar>
    </div>
    <div class="control-container">
        <div class="m-2 p-2">
            @Body
        </div>
    </div>
</div>

<style>
    .control-container .e-btn.e-inherit {
        margin: 0 3px;
    }

    .control-container .syncfusion-logo {
        background: url(https://www.biltay.com.tr/wp-content/uploads/2021/07/BiltayLOGO.png);
        background-size: contain;
        background-repeat: no-repeat;
        height: 30px;
        width: 150px;
        margin-right : 10px;
    }

    .e-menu-wrapper ul .e-menu-item .e-menu-icon, .e-menu-container ul .e-menu-item .e-menu-icon {
        margin-right : 0px !important;
    }
</style>
